doctype html
html
  head
    title Cadastro de Cliente
  body
    h1 Cadastro de Cliente

    form(onsubmit="registrar(event)")
      div
        label(for="nome") Nome:
        input(type="text", name="nome", required)
      div
        label(for="email") Email:
        input(type="email", name="email", required)
      div
        label(for="senha") Senha:
        input(type="password", name="senha", required)
      div
        label(for="senha1") Confirmar Senha:
        input(type="password", name="senha1", required)
      div
        button(type="submit") Registrar

    script.
      async function registrar(event) {
        event.preventDefault();

        const nome = document.querySelector('input[name="nome"]').value;
        const email = document.querySelector('input[name="email"]').value;
        const senha = document.querySelector('input[name="senha"]').value;
        const senha1 = document.querySelector('input[name="senha1"]').value;

        if (senha !== senha1) {
          alert('As senhas não conferem');
          return;
        }

        try {
          const response = await fetch('/cliente/registrar', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ nome, email, senha, senha1 })
          });

          const data = await response.json();

          if (!response.ok) {
            alert(data.erro || 'Erro no cadastro');
            return;
          }

          alert('Cadastro realizado com sucesso!');
          window.location.href = '/cliente/login'; // redireciona após cadastro

        } catch (err) {
          console.error(err);
          alert('Erro de conexão com o servidor');
        }
      }