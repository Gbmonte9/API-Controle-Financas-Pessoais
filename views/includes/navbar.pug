nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top.w-100
      .container-fluid
        a.navbar-brand(href="/dashboard") #{title}

        button.navbar-toggler(
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        )
          span.navbar-toggler-icon

        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item
              a.nav-link(href="/transacoes") Transações
            li.nav-item
              a.nav-link(href="/transacoes/nova") Fazer Transações
            li.nav-item
              a.nav-link(href="/relatorios") Relatórios
            li.nav-item
              a.nav-link(href="/perfil") Perfil

          // Área do usuário (nome, foto, botão) alinhada à direita
          .d-flex.align-items-center.gap-2.flex-column.flex-lg-row.mt-3.mt-lg-0.ms-lg-auto
            span#nome-usuario.text-white.text-center.text-lg-start #{usuario ? usuario.nome : 'Usuário'}

            img#fotoCliente.rounded-circle(style="width: 40px; height: 40px; object-fit: cover;" src="/uploads/default-avatar.jpg" alt="Foto do usuário")

            a.btn.btn-light.btn-sm(href="/") Sair