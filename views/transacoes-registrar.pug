extends layout

block content

  include includes/navbar

  .card.rounded-5.p-5.text-center.border.border-white.shadow-white

    h2.mb-4.text-center Nova Transação

    form
      .mb-3.text-start

        label.form-label(for="tipo") Tipo:
        select.form-select(name="tipo" id="tipo" required)
          option(value="" disabled selected) Selecione o tipo
          option(value="receita") Receita
          option(value="despesa") Despesa

      .mb-3.text-start
        label.form-label(for="descricao") Descrição:
        input.form-control(type="text" id="descricao" name="descricao" placeholder="Ex: Salário, Aluguel")

      .mb-3.text-start
        label.form-label(for="valor") Valor:
        input.form-control(type="number" step="0.01" id="valor" name="valor" placeholder="Ex: 200.00")

      .mb-3.text-start
        label.form-label(for="categoria") Categoria:
        select.form-select(name="categoria" id="categoria" required)
          option(value="" disabled selected) Selecione a categoria

      p#message.text-success.text-center

      .text-center.mt-4
        button.btn.btn-light.btn-lg.w-100(type="button" id="btnCadastrarTransacao") Salvar

block scripts
  script(src="/javascripts/components/clienteInfo.js")
  script(src="/javascripts/transacoes/transacoes-registrar.js")